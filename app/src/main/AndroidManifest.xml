<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ahmedbashir.capstonemanagementapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".RegisterUserActivity"
            android:label="@string/user_registration_label" />
        <activity
            android:name=".StudentHomeActivity"
            android:label="@string/student_home"
            android:launchMode="singleInstance" />
        <activity
            android:name=".ProjectDetailsActivity"
            android:label="@string/project_show"
            android:launchMode="singleInstance" />
        <activity
            android:name=".CreateGroupActivity"
            android:label="Create Group"
            android:launchMode="singleInstance" />
        <activity
            android:name=".ViewSupervisorActivity"
            android:label="Supervisors List"
            android:launchMode="singleInstance" />
        <activity
            android:name=".NotificationsActivity"
            android:label="Notifications"
            android:launchMode="singleInstance" />
        <activity
            android:name=".CreateProjectActivity"
            android:label="Create Project"
            android:launchMode="singleInstance" />
        <activity android:name=".FullNotificationActivity"></activity>
    </application>

</manifest>